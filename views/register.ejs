<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <style>
        /* Style for the registration form container */
        .registration-form-container {
          max-width: 500px;
          margin: 0 auto;
          padding: 20px;
          display: flex;
          flex-wrap: wrap;
          justify-content: space-between;
          background-color: #d1a0a0;
          border-radius: 5px;
          box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        }
      
        /* Style for the form inputs */
        .registration-form-container input[type=text], 
        .registration-form-container input[type=password],
        .registration-form-container input[type=email] {
          display: block;
          width: 100%;
          padding: 10px;
          margin-bottom: 10px;
          border-radius: 5px;
          border: none;
          box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
        }
      
        /* Style for the submit button */
        .registration-form-container input[type=submit] {
          background-color: #4CAF50;
          color: white;
          border: none;
          padding: 10px 20px;
          border-radius: 5px;
          cursor: pointer;
          font-size: 16px;
        }
      
        /* Style for the error message */
        .error-message {
          color: red;
          font-size: 14px;
          margin-top: 5px;
        }
      </style>
</head>
<body>
    
    <div class="registration-form-container">
      
    <form action="/register" method="post">
        <h1>Register</h1>
    <input type="text" name="name" id="name"  placeholder="Enter your name "  >
    <input type="email" name="email" id="email" placeholder="Enter your email "  >
    <input type="password" name="password" id="password"  placeholder="Enter your password "  ><br>
    Already have account <a href="/login" >Login</a><br><br>
    <input type="submit" value="submit" name="Register" onchange="return validateForm()">
    </form>
    </div>
</body>
<script>

    function validateForm() {
        const name = document.getElementById('name').value;
        const email = document.getElementById('email').value;
        const password = document.getElementById('password').value;
        //console.log(name,email,password)
        if (name  === '' && email === ''  && password === '' ) {
            alert('Please enter name and email and password');
            return false;
          }
          return true;
        }
</script>
</html>
